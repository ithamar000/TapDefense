<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/battleground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/about"
            android:id="@+id/btn_info"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/setting"
            android:id="@+id/btn_settings"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="70" android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgV_Logo"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/logo_new" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/logo_text"
                android:src="@drawable/logo_titlet"
                android:layout_marginTop="100dp"
                android:visibility="invisible"
                />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <Button
                android:layout_marginTop="0dp"
                android:layout_width="200sp"
                android:layout_height="45dp"
                android:id="@+id/btn_easyplay"
                style="@style/btn_menu_style"
                android:background="@drawable/btn_shape_diff"
                android:text="@string/txt_easy"

                />
            <Button
                android:layout_width="200sp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                style="@style/btn_menu_style"
                android:id="@+id/btn_normalplay"
                android:background="@drawable/btn_shape_diff"
                android:text="@string/txt_normal"/>
            <Button
                android:layout_width="200sp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                style="@style/btn_menu_style"
                android:id="@+id/btn_hardplay"
                android:background="@drawable/btn_shape_diff"
                android:text="@string/txt_hard"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/prize"
            android:id="@+id/btn_highScore"/>

    </LinearLayout>

</LinearLayout>